Sub StartArm
  
  Brazo.ATimer(100,1000)
  MotorA.ResetCount()
  Program.Delay(100)
  Brazo.AEncoder(35,-200)
  MotorA.ResetCount()
  Speaker.Play(100,"Connect")
  Speaker.Wait()
EndSub

