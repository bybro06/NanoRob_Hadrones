  negro1 = 10
  negro3 = 9
  negro4 = 8
  
  blanco1 = 65
  blanco3 = 59
  blanco4 = 55
  
  RGB.VALUENEGRO = 4
  RGB.VALUEBLANCO = 32
  RGB.RWHITE = 57
  RGB.GWHITE = 71
  RGB.BWHITE = 73
  
  'Auto definición de propiedades
  
  Recto.diametro = diametro
